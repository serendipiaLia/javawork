package arrays;

public class FindMaxIdx {

	public static void main(String[] args) {
		// 최대값의 위치 찾기
		// 최대값의 위치를 0번으로 설정
		int[] arr = new int[] {1, 5, 8, 3, 2};
		int maxIdx = 0;
		
		for(int i = 0; i < arr.length; i++) {
			//if문
		if(arr[i] > maxIdx) 
			maxIdx = arr[i];
			
		}
		
		System.out.println("최대값의 위치 : " + maxIdx);
		
	}//m
}

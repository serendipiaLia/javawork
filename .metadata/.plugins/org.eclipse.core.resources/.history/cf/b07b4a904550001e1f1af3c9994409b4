package classes;

//참조(래퍼런스) 자료형
public class Student {
	//클래스 내부에서는 변수(필드-field)
	String name;	//학생 이름("홍길동")
	int studentId;	//학번(101)
	int grade;		//학년

	//학생의 정보를 출력하는 메서드(함수)
	public void showStudentInfo() {
		System.out.println("이름: " + name + 
				", 학번 : " + studentId + ", 학년 :" + grade);
	}
	
	
}

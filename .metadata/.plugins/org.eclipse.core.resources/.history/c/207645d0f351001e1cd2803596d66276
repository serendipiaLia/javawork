package customers;

public class CustomerTest1 {
	public static void main(String[] args) {
		// 일반 고객 1명, vip 1명의 객체 생성
		Customer lee = new Customer();
		//입력
		lee.setCustomerId(1001);
		lee.setCustomerName("이강인");
		
		int price = 10000;	//상품 구매가격
		lee.calcPrice(price);
		
		
		//출력
		System.out.println(lee.showCustomerInfo());
		System.out.println("=================================");
		
		VIPCustomer woo = new VIPCustomer();
		woo.setCustomerId(1010);
		woo.setCustomerName("손흥민");
		woo.setAgentId(7777);
		
		System.out.println(woo.showCustomerInfo());
	}

}

package mart;
// 클래스의 3요소 : 필드 , 생성자 , 메서드
//고객 관리 프로그램 구현하기
public class Customer { 
	//고객이름, 고객등급, 고객아이디, 고객 주소, 보너스포인트 , 보너스적립율
	protected String name;
	protected String grade;
	protected String id;
	protected String address;
	int point;		//보너스 포인트
	double ratio;	//보너스 적립율
	
	//기본생성자 == 디폴트생성자
	public Customer() {
		grade = "basic"; //고객등급
		ratio = 0.01; //보너스 적립율
	}
	
	// 메서드
		// 포인트계산 메서드 : 보너스포인트 = 상품가격 * 보너스적립율 
		public int calcPrice(int price) {
			point = price * ratio;
			return price;
		}
	

	
	
	
	
}

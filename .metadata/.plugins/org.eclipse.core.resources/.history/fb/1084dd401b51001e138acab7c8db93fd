package transport;

//(자료형) 사람 클래스
public class Person {
	//필드
	String name;	//이름
	int money;		//가진 돈
	
	public Person(String name, int money) {	//외부에서 만들어서 가져옴
		this.name = name;
		this.money = money;
	}
	
	//버스를 탄다
	public void takeBus(Bus bus) {
		bus.take(1500);
		this.money -= 155;  //this.money - 1500;
	}
	
	//사람의 정보
	public void showPersonInfo() {
		System.out.println(name + "님의 잔액은 " + money + "원 입니다.");
	}
	
}
